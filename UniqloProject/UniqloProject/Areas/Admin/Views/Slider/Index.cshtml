@model List<Slider>
@{
    int count = 1;
}
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Slider List</h6>
                    <a asp-action="Create" asp-controller="Slider" class="btn btn-outline-primary">Create</a>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">Title</th>
                                <th scope="col">Subtitle</th>
                                <th scope="col">Link</th>
                                <th scope="col">Created Time</th>
                                <th scope="col">Update</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Show/Hide</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="col">@count</td>
                                    <td scope="col"><img src="~/imgs/sliders/@item.ImageUrl" width="50px"></td>
                                    <td scope="col">@item.Title</td>
                                    <td scope="col">@item.SubTitle</td>
                                    <td scope="col">@item.Link</td>
                                    <td scope="col">@item.CreatedTime</td>
                                    <td scope="col">
                                        <a class="btn btn-primary" asp-action="Update" asp-controller="Slider" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                    </td>
                                    <td scope="col">
                                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                    <td scope="col">
                                        <a class="btn @(item.isDeleted? "btn-warning" : "btn-secondary")"
                                           asp-action="@(item.isDeleted ? "Show" : "Hide")"
                                           asp-controller="Slider"
                                           asp-route-id="@item.Id">
                                            <i class="fa-solid @(item.isDeleted ? "fa-eye" : "fa-eye-slash")"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>