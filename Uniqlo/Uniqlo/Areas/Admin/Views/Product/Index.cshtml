@model List<Product>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Slider List</h6>
        <a asp-action="Create" asp-controller="Slider" class="btn btn-outline-primary ml-auto">Create</a>
    </div>
    <div class="card-body">

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Category</th>
                    <th scope="col">Cost Price</th>
                    <th scope="col">Sell Price</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Stock Count</th>
                    <th scope="col" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.</td>
                        <td><img src="~imgs/products/@item.CoverImage" width="50px"></td>
                        <td>@item.Category?.Name</td>
                        <td>@item.CostPrice</td>
                        <td>@item.Sellprice</td>
                        <td>@item.Discount</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>